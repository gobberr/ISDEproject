extends header

block content

  .py-5
    .container
      #user
        if user
          .row
          h5 List of calendar events
          .row
          br  
          #events
          if (events.length>0)
            each event in events    
              h7 Title: #{event.title}              
              br
              h7 Start: #{event.start_time}
              br
              h7 End: #{event.end_time}
              br
              br
          else
            h7 Nessun evento trovato nel calendario
        else
          .row
            .col-md-5
              h4 Login with Google+ to use the service              
              