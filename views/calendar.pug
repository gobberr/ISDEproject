extends header

block content

  .py-5
    .container
      #user
        if user
          .row
          h5 List of calendar events
          .row
          br  
          #events
          if (events.length>0)
            each event in events    
              h7 #{event}
              br
          else
            h7 Nessun evento trovato nel calendario
        else
          .row
            .col-md-4
              h4 Login to use the service
              
              